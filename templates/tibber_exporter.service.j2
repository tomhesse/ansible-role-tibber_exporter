{{ ansible_managed | comment }}

[Unit]
Description=Prometheus Tibber Exporter
After=network-online.target

[Service]
Type=simple
User={{ tibber_exporter_system_user }}
Group={{ tibber_exporter_system_group }}
Environment=TIBBER_TOKEN={{ tibber_exporter_api_token }}
ExecStart={{ tibber_exporter_binary_install_dir }}/tibber_exporter

SyslogIdentifier=tibber_exporter
Restart=always
RestartSec=1
StartLimitInterval=0

[Install]
WantedBy=multi-user.target
